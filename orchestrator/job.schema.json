{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SwarmFactoryJob",
  "type": "object",
  "required": ["jobId", "createdAt", "phase", "idea", "history"],
  "properties": {
    "jobId": { "type": "string" },
    "createdAt": { "type": "string", "format": "date-time" },
    "phase": {
      "type": "string",
      "enum": [
        "INTAKE",
        "CUSTOMER_DISCOVERY",
        "PRODUCT_SYNTHESIS",
        "DESIGN",
        "BUILD",
        "QA",
        "DEPLOY",
        "HUMAN_REVIEW",
        "DONE",
        "FAILED"
      ]
    },
    "idea": { "type": "string" },
    "artifacts": {
      "type": "object",
      "additionalProperties": true
    },
    "history": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["ts", "event"],
        "properties": {
          "ts": { "type": "string", "format": "date-time" },
          "event": { "type": "string" },
          "data": { "type": "object", "additionalProperties": true }
        }
      }
    },
    "failure": {
      "type": "object",
      "required": ["reason"],
      "properties": {
        "reason": { "type": "string" },
        "details": { "type": "object", "additionalProperties": true }
      }
    }
  }
}
